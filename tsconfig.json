{
    "compilerOptions": {
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "commonjs",
        "lib": ["ESNext", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "types": ["node"]
    },
    "include": ["src/**/*.js", "src/**/*.ts", "fauna"],
    "exclude": ["node_modules", "tmp", "fauna/temp/**/*", "src/cli"]
}
